<div class="row justify-content-md-center ">
 <div class="login-box mt-2 mb-5">
    <img class="d-block mx-auto mb-4" src="/images/sports/FallSportsIcon.png" alt="" width="72" height="57">
    <div class= "justify-content-md-center my-4"  >
        <h1 class="h3 mb-3 justify-content-center">Sign Up</h1>
    <% if @user.errors.any? %>
        <ol>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ol>
    <% end %>
    <%= form_for @user do |f| %>
        <%= f.label :email, :class => 'form-label' %>
        <%= f.email_field :email, :class => 'form-control' %>
        <%= f.label :password, :class => 'form-label' %>
        <%= f.password_field :password, :class => 'form-control' %>
        <%= f.label :password_confirmation, :class => 'form-label' %>
        <%= f.password_field :password_confirmation, :class => 'form-control mb-2' %>
        <%= f.submit "Welcome", :class => 'btn btn-outline-dark btn-lg' %>
    <% end %>
    </div>
 </div>
    <div class="d-flex justify-content-center">
         <%= image_tag "/images/sports/siluetas.jpeg", height: 700 %>
    </div>
</div>