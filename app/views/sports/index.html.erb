<h1 class=" my-5 ">All our sport</h1>


<div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 g-3 d-flex align-items-stretch">
    <% @sports.each do |sport| %>
    <div class="col">
        <div class="card shadow-sm">
        <%= link_to  image_tag(sport.image, :class => 'thumb'), sport %>

        <div class="card-body">
            <h5 class="card-title"><%= link_to sport.title, sport, :class => 'text-decoration-none link-dark' %></h5>
            <div class="d-flex justify-content-between align-items-center">
            </div>
        </div>
    </div>
    </div>

    <% end %>
</div>
        
        

