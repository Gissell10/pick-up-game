<h1 class=" my-5 "><%= @sport.title %></h1>

<%= image_tag @sport.image, :class => 'feature'%>

 <%= form_for @event do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.hidden_field :sport_id, :value => @sport.id %>

    <%= f.label :appointed, 'Date of event' %>
    <%= f.text_field :appointed, :placeholder => 'YYYY-MM-DD' %>
 
    <%= f.label :description%>
    <%= f.text_area :description%>

    <%= f.label :arrival_time, 'Arrival time' %>
    <%= f.time_field :arrival_time %>

    <%= f.submit %>
<% end %> 



<div class="sport-events row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 d-flex align-items-stretch">
    <% @sport.events.each do |event| %>
    <div class="col">
        <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title"><%= link_to event.title, event, :class => 'text-decoration-none link-dark' %></h5>
            <div class="d-flex justify-content-between align-items-center">
            </div>
        </div>
    </div>
    </div>

    <% end %>
</div>
    
  