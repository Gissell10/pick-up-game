<h1 class=" my-5 "><%= @sport.title %></h1>

<%= image_tag @sport.image, :class => 'feature my-5 '%>

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3">
 <h3 class=" my-3 ">Ready for play outside, create an event and invite some friends</h3>
 <%= form_for @event do |f| %>
    <%= f.label :title, 'Event title', :class => 'form-label' %>
    <%= f.text_field :title, :class => 'form-control' %>
    <%= f.hidden_field :sport_id, :value => @sport.id %>
    <%= f.hidden_field :lat, :id => 'lat' %>
    <%= f.hidden_field :lng, :id => 'lng' %>

    <%= f.label :appointed, 'Date of event', :class => 'form-label' %>
    <%= f.text_field :appointed, :placeholder => 'YYYY-MM-DD', :class => 'form-control' %>
 
    <%= f.label :description, :class => 'form-label'%>
    <%= f.text_area :description, :class => 'form-control'%>

    <%= f.label :arrival_time, 'Arrival time', :class => 'form-label' %>
    <%= f.time_field :arrival_time, :class => 'form-control' %>

    <%=  f.submit "Create Event", :class => 'btn btn-outline-dark btn-lg my-5' %>
<% end %> 
<div id="map"></div>
</div>

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <h3 class=" my-5 ">Eventos disponibles </h3>
    <div class="sport-events row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 d-flex align-items-stretch">
        <% @sport.events.each do |event| %>
        <div class="col">
            <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><%= link_to event.title, event, :class => 'text-decoration-none link-dark' %></h5>
                <div class="d-flex justify-content-between align-items-center">
                </div>
            </div>
        </div>
        </div>

        <% end %>
    </div>
</div>
<%= javascript_include_tag 'mapForm'%>
<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCTUMfXXNvknaNbixTNuJfu77k8EG7YaSw&callback=initMap" %>

    
  