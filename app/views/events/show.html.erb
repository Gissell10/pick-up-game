<h1><%= @event.title %></h1>
<p><%= @event.description %></p>
<p><%= @event.arrival_time %></p>


 <% if @event.sport.present? %>
       <li>sport: <%= link_to @event.sport.title, @event.sport %></li>
       <li><%= link_to image_tag(@event.sport.image, :class => 'thumb'), 
       @event.sport%></li> 
 <% end %>


    <ul>
    <% @users.each do |user| %>
        <li><%= user.name %></li>
    <% end %>
    </ul>

 

<%= link_to 'join', join_event_path(@event) %>
<%= link_to 'leave', leave_event_path(@event) %>
