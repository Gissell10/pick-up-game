<h1 class = " my-5 "><%= @event.title %></h1>
<p><%= @event.description %></p>
<p><%= @event.arrival_time %></p>


 <% if @event.sport.present? %>
       <li>sport: <%= link_to @event.sport.title, @event.sport %></li>
       <%= link_to image_tag(@event.sport.image, :class => 'thumb'), 
       @event.sport%>
       <div id="map" data-lat=<%= @event.lat %> data-lng=<%= @event.lng %>></div>
 <% end %>


    <ul>
    <% @users.each do |user| %>
        <li><%= user.name %></li>
    <% end %>
    </ul>

 

<%= link_to 'join', join_event_path(@event) %>
<%= link_to 'leave', leave_event_path(@event) %>


<%= javascript_include_tag "map" %>
<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCTUMfXXNvknaNbixTNuJfu77k8EG7YaSw&callback=initMap" %>