<h1 class = " my-5 ">My events </h1>

<div class="sport-events row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 d-flex align-items-stretch">
    <% @events.each do |event| %>
    <div class="col">
     <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title"><%= link_to event.title, event, :class => 'text-decoration-none link-dark' %></h5>
            <div class="d-flex justify-content-between align-items-center">
            </div>
        </div>
    </div>
    </div>
    <% end %>
</div>
<div class="container ">
     <%= image_tag "/images/sports/colorSport.jpg", :class =>"img-fluid" %>
</div>
   
