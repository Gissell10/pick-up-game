<!DOCTYPE html>
<html>
  <head>
    <title>PickUpGame</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="container">

      <%=link_to "Home", root_path %>
      <%= link_to 'About us', about_path  %>
        <% if @current_user.present? %>
        <%= link_to 'Sports', sports_path %>
        <%= link_to 'Events', events_path %>
        <%= link_to "Sign out", login_path, :method => 'delete' %>
      <% else %>
        <%= link_to 'Sign up', new_user_path %>
        <%= link_to 'Log in', login_path %>
      <% end %>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
    
    <div class="container">
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
          <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
            <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
          </a>
          <span class="text-muted">Â© 2022 Gissell, Inc</span>
        </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
          <li class="ms-3"><a class="text-muted" > 
            <%= link_to "http://www.facebook.com/user" do %>
            <%= image_tag '/images/sports/facebook.png', height: 12 %>
            <% end %>
         </li>
          <li class="ms-3"><a class="text-muted">
            <%= link_to "http://www.instagram.com/user" do %>
            <%= image_tag '/images/sports/instagram.jpg', height: 12 %>
            <% end %></li>
          <li class="ms-3"><a class="text-muted">
            <%= link_to "http://www.twitter.com/user" do %>
            <%= image_tag '/images/sports/twitter.png', height: 12 %>
            <% end %></li>
          </li>
        </ul>
       
      </footer>
</div>


   
  </body>
</html>
