<h1>Log In</h1>

<% if flash[:error].present? %>
    <h2><%= flash[:error] %></h2>
<% end %>
<%= form_tag login_path do %>
    <%= label_tag :email, nil, :class => 'form-label'%>
    <%= email_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log in" %>
<% end %>