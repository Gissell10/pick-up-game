<div class="row justify-content-md-center ">
 <div class="login-box mt-2 mb-5">
    <img class="d-block mx-auto mb-4" src="/images/sports/FallSportsIcon.png" alt="" width="72" height="57">
  <div class="row justify-content-md-center my4">
    <div class="login-box mt-2">
        <h1>Log In</h1>

        <% if flash[:error].present? %>
            <h2><%= flash[:error] %></h2>
        <% end %>
        <%= form_tag login_path do %>
            <%= label_tag :email, nil, :class => 'form-label'%>
            <%= email_field_tag :email, nil, :class => 'form-control'  %>
            <%= label_tag :password, nil, :class => 'form-label'%>
            <%= password_field_tag :password, nil, :class => 'form-control mb-2'  %>
            <%= submit_tag "Log in", :class => 'btn btn-outline-dark btn-lg' %>
        <% end %>
    </div>
  </div>
 </div>
   <div class="d-flex justify-content-center">
         <%= image_tag "/images/sports/siluetas.jpeg", height: 700 %>
    </div>
</div>


